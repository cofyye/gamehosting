{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "shared/services/email/templates/**",
        "watchAssets": true
      },
      {
        "include": "../uploads/**",
        "outDir": "dist/uploads",
        "watchAssets": true
      },
      {
        "include": "../dockers/**",
        "outDir": "dist/dockers",
        "watchAssets": true
      },
      {
        "include": "../bash/**",
        "outDir": "dist/bash",
        "watchAssets": true
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
